@using Marketplace.Core.Models
@model IEnumerable<UserListViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="row">
    <div class="col-12">
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th><p align="right">Edit</p></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>
                                <a asp-area="admin" asp-action="edit" asp-controller="user" asp-route-id="@item.Id" class="btn btn-danger float-right"> Edit </a>
                                <a asp-area="admin" asp-action="roles" asp-controller="user" asp-route-id="@item.Id" class="btn btn-info btn-info float-right"> Change Roles </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
