@using Marketplace.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "Change Roles";
}


<div class="main-content">
    <h2 class="mb-0">@Model.Name</h2>
</div>

<div class="row">
    <div class="col-sm-6">

        <div class="form-group">
            <label>User Roles</label>
            <select asp-for="RoleIds" multiple="" class="form-control">
                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
                {
                    <option value="@item.Value" selected="@(item.Selected ? "selected" : "")">@item.Text</option>
                }
            </select>
        </div>
    </div>
</div>



<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            <h2>Add / Remove Roles for: @Model.Name</h2>
        </div>
        <div class="card-body">
        @*Begin change*@
            @{ int i = 0;}
            @foreach (var x in(IEnumerable<SelectListItem>)ViewBag.RoleItems)
            {               
                <div class="form-check m-1">                    
                    <input type="hidden" asp-for="@x.Value" name="[@i].Value"/>
                    <input type="hidden" asp-for="@x.Text" name="[@i].Text"/>
                    <input asp-for="@x.Selected" name="[@i].Selected" class="form-check-input" onclick="$(this).val(this.checked ? true : false)"/>
                    <label class="form-check-label" asp-for="@x.Selected">
                        @x.Text
                    </label>
                </div>
                i++;
            }
         @*End change*@
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-page="/admin/user/manageusers" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
