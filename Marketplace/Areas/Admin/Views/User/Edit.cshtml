@using Marketplace.Core.Models
@model UserEditViewModel
@{
     ViewData["Title"] = "Edit User";
}

<div class="main-content">
    <h2 class="mb-0">@Model.Email</h2>
    <h3 class="mb-0">@Model.FirstName @Model.LastName</h3>
</div>

<div class="card-body">
    <form id="edit" method="post" id="dellete">
        <div class="col-4 text-right">
            <button id="edit" type="submit" class="btn btn-sm btn-primary">Edit User</button>
        </div>
        <h6 class="heading-small text-muted mb-4">User information</h6>
        <div class="pl-lg-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <div class="form-group focused">
                    <label class="form-control-label" for="input-email">Email address</label>
                    <input asp-for="Email" type="email" class="form-control form-control-alternative" placeholder="Email address" value=@Model.Email aria-required="true">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group focused">
                    <label class="form-control-label" for="input-first-name">First name</label>
                    <input asp-for="FirstName" type="text" class="form-control form-control-alternative" placeholder="First name" value=@Model.FirstName aria-required="true">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group focused">
                    <label class="form-control-label" for="input-last-name">Last name</label>
                    <input asp-for="LastName" type="text" class="form-control form-control-alternative" placeholder="Last name" value=@Model.LastName aria-required="true">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group focused">
                    <label class="form-control-label" for="input-last-name">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control form-control-alternative" placeholder="Phone Number" value=@Model.PhoneNumber aria-required="true">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group focused">
                    <label class="form-control-label" for="input-last-name">Is Deleted has only two options, True or False</label>                    
                    <input asp-for="Is_Deleted" type="text" class="form-control form-control-alternative" placeholder="Is_Deleted" value=@Model.Is_Deleted aria-required="true">
                    <span asp-validation-for="Is_Deleted" class="text-danger"></span>
                </div>
            </div>
        </div>
