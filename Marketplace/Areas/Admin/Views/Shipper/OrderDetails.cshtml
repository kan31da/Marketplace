@using Marketplace.Core.Models
@model OrderDetailsViewModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Shipper Name</th>
                            <th>Shipper Phone</th>
                            <th>Order Date</th>
                            <th>Order Price</th>
                            <th>Status</th>
                            <th><p align="right"></p></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                                <td>@Model.ShipperName</td>
                                <td>@Model.ShipperPhone</td>
                                <td>@Model.OrderDate</td>
                                <td>@Model.OrderPrice</td>
                                <td>@Model.OrderStatus</td>

                            </tr>
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<br></br>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td> <img src="@item.Image" alt="none" width="80" height="auto"> </td>
                                <td>@item.TotalPrice</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <p><h3>Price for order:  @Model.Products.Sum(m => m.Price * m.Quantity) </p>
    </div>
</div>


<a asp-action="Orders" asp-controller="Shipper" class="btn btn-info btn-info float-left"> Back </a>