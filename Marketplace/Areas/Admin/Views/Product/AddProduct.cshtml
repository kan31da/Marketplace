@using Marketplace.Core.Models
@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="card-body">
    <form id="productForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                    
                    <div class="form-floating">
                        <label asp-for="Name"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Name" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Price"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Price" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Quantity"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Quantity" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="Description"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Description" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div> 
                     <div class="form-floating">
                        <label asp-for="FirstImagePath"></label>
                        <div class="input-group mb-3">
                            <input asp-for="FirstImagePath" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="FirstImagePath" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="CategoryLabel"></label>
                        <div class="input-group mb-3">
                            <input asp-for="CategoryLabel" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="CategoryLabel" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="SupplierCompanyName"></label>
                        <div class="input-group mb-3">
                            <input asp-for="SupplierCompanyName" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="SupplierCompanyName" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="SupplierAddress"></label>
                        <div class="input-group mb-3">
                            <input asp-for="SupplierAddress" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="SupplierAddress" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="SupplierPhone"></label>
                        <div class="input-group mb-3">
                            <input asp-for="SupplierPhone" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="SupplierPhone" class="text-danger"></span>
                    </div> 
                    <button id="productSubmit" type="submit" class="btn btn-info btn-info float-left">Add Product</button>                   
                </form>
    <partial name="_ValidationScriptsPartial" />
</div>
