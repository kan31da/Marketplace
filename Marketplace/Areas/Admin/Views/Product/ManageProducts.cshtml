@using Marketplace.Core.Models
@model IEnumerable<ProductListViewModel>
@{
     ViewData["Title"] = "Manege Products";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Manege Products</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th><p align="right">Edit</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td> <img src="@item.Image" alt="none" width="50" height="50"> </td>
                                <td>
                                    <a asp-area="admin" asp-action="edit" asp-controller="product" asp-route-id="@item.Id" class="btn btn-danger float-right"> Edit </a>
                                    <a asp-area="admin" asp-action="editimages" asp-controller="product" asp-route-id="@item.Id" class="btn btn-info btn-info float-right"> Add Remove Image </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>