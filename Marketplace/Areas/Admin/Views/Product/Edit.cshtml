@using Marketplace.Core.Models
@model ProductEditViewModel
@{
     ViewData["Title"] = "Edit Product";
}


<div class="card-body">
    <form id="productForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                    
                    <div class="form-floating">
                        <label asp-for="Name"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Name" placeholder="Name" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Price"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Price" placeholder="Price" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Quantity"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Quantity" placeholder="Quantity" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div> 
                    <div class="form-floating">
                        <label asp-for="Description"></label>
                        <div class="input-group mb-3">
                            <input asp-for="Description" placeholder="Description" aria-required="true" />                            
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>                                                          
                    <button id="productSubmit" type="submit" class="btn btn-info btn-info float-left">Edit Product</button>                   
                    <button id="productSubmit" asp-route-id="@Model.Id" asp-action="Delete" type="submit" class="btn btn-info btn-danger float-right">Delete Product</button>                   
                </form>
    <partial name="_ValidationScriptsPartial" />
</div>