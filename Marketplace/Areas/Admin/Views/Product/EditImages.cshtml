@using Marketplace.Core.Models
@model ProductToEditViewModel
@{
    ViewData["Title"] = "Add Remove Images in Product";
}

@foreach (var item in Model.Images)
{
    <img src="@item.ImagePath" alt="none" width="50" height="50">
    <a asp-area="admin" asp-action="addimage" asp-controller="product" asp-route-id="@item.Id" class="btn btn-danger float-right"> Add Image </a>
    <a asp-area="admin" asp-action="deleteimage" asp-controller="product" asp-route-id="@item.Id" class="btn btn-info btn-info float-right"> Delete Image </a>
}