@using Marketplace.Core.Models
@model IEnumerable<CartProductsViewModel>
@{
    ViewData["Title"] = "Cart Details";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Total Price</th>
                            <th><p align="right">Edit</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td> <img src="@item.Image" alt="none" width="80" height="auto"> </td>
                                <td>@item.TotalPrice</td>
                                <td>

                                    <a asp-action="edit" asp-controller="cart" asp-route-productId="@item.Id" class="btn btn-info btn-warning float-right"> Edit </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <p>Price for order:  @Model.Sum(m=>m.Price * m.Quantity) </p>
        <a asp-action="UserOrder" asp-controller="cart" class="btn btn-info btn-info float-left"> Order </a>
        <a asp-action="index" asp-controller="product" class="btn btn-info btn-outline-warning float-right"> Cansel </a>
    </div>
</div>