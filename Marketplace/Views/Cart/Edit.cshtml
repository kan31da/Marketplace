@using Marketplace.Core.Models
@model CartProductsViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Total Price</th>
                            <th><p align="right"></p></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.Price</td>
                            <td>@Model.Quantity</td>
                            <td> <img src="@Model.Image" alt="none" width="80" height="auto"> </td>
                            <td>@Model.TotalPrice</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="card-body">
    <form id="productForm" method="post">
        <div class="form-floating">
            <label asp-for="Quantity"></label>
            <div class="input-group mb-3">
                <input asp-for="Quantity" placeholder="Quantity" aria-required="true" />
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button id="productSubmit" type="submit" asp-route-id="@Model.Id" class="btn btn-info btn-info float-left">Edit Quantity</button>
        <button id="productSubmit" asp-route-productId="@Model.Id" asp-action="DeleteProductCart" type="submit" class="btn btn-info btn-danger float-right">Delete Product</button>
    </form>
    <partial name="_ValidationScriptsPartial" />
</div>
