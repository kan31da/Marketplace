@using Marketplace.Core.Models
@model IEnumerable<ProductListViewModel>
@{
     ViewData["Title"] = "Products Catalogue";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th><p align="right">Edit</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td> <img src="@item.Image" alt="none" width="80" height="auto"> </td>
                                <td>
                                    <a asp-action="addproducttocart" asp-controller="cart" asp-route-id="@item.Id" class="btn btn-info btn-info float-right"> Add to Cart </a>
                                    <a asp-action="details" asp-controller="product" asp-route-id="@item.Id" class="btn btn-info btn-warning float-right"> Details </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>